@model ProjectsManager.Models.Project

@{
    ViewData["Title"] = "Детали проекта";
}

<h1 class="form-title">Детали проекта @Model?.Name</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.LastName)
            @Html.DisplayFor(model => model.User.Name)
            @Html.DisplayFor(model => model.User.Patronymic)
        </dd>
    </dl>
</div>
<div>
    <a class="form-link" asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> 
</div>
